generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                String           @id @default(uuid())
  email             String           @unique
  role              Role             @default(USER)
  firstName         String?
  lastName          String?
  phoneNumber       String?
  gender            Gender           @default(FEMALE)
  birthDate         DateTime?
  heightCm          Float?
  startWeight       Float?
  targetWeight      Float?
  pisi              Float?
  startDate         DateTime         @default(now())
  goalDate          DateTime?
  subscriptionTier  SubscriptionTier @default(STANDARD_6)
  planStartDate     DateTime?        @default(now())
  subEndDate        DateTime?
  isActive          Boolean          @default(true)
  currentStreak     Int              @default(0)
  longestStreak     Int              @default(0)
  lastActivityDate  DateTime?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  isPhaseManual     Boolean          @default(false)
  manualPhaseReason String?
  hasCompletedOnboarding Boolean @default(false)
  channels          ChannelMember[]
  contentLogs       ContentLog[]
  dailyLogs         DailyLog[]
  sessions          IkongaSession[]
  messages          Message[]
  notifications     Notification[]
  analysis          UserAnalysis?
  badges            UserBadge[]
  phases            UserPhase[]
  weeklyPlans       WeeklyPlan[]
  wellnessLogs      WellnessLog[]
  workoutLogs       WorkoutLog[]

  @@index([email])
}


model UserPhase {
  id               String    @id @default(uuid())
  userId           String
  type             PhaseType
  startDate        DateTime  @default(now())
  plannedEndDate   DateTime?
  actualEndDate    DateTime?
  isManualOverride Boolean   @default(false)
  adminNote        String?
  isActive         Boolean   @default(true)
  user             User      @relation(fields: [userId], references: [id])

  @@index([userId, isActive])
}

model IkongaSession {
  id                 String   @id @default(uuid())
  userId             String
  sessionNumber      Int
  startDate          DateTime
  endDate            DateTime
  projectedWeightEnd Float
  targetLoss         Float
  realWeightEnd      Float?
  user               User     @relation(fields: [userId], references: [id])

  @@unique([userId, sessionNumber])
}

model DailyLog {
  id               String     @id @default(uuid())
  userId           String
  date             DateTime   @default(now())
  weight           Float?
  photoUrl         String?
  menuId           String?
  caloriesConsumed Int?
  workoutDone      Boolean    @default(false)
  hydration        Int        @default(0)
  sleepHours       Int?
  mood             Mood?
  digestion        Digestion?
  stressLevel      Int?
  energyLevel      Int?
  wellnessScore    Float?
  notes            String?
  dayStatus        String?
  user             User       @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}

model WellnessAnalysis {
  id          String   @id @default(uuid())
  userId      String
  date        DateTime @default(now())
  trendSlope  Float?
  avgStress   Float?
  actionTaken String?
}

model Menu {
  id          String      @id @default(uuid())
  title       String      @unique
  phaseCompat PhaseType[]
  content     Json
  isPremium   Boolean     @default(false)

  @@index([title])
}

model ContentLibrary {
  id            String       @id @default(uuid())
  category      String
  title         String
  mediaUrl      String?
  targetGender  String[]
  targetPhases  PhaseType[]
  emotionalTags String[]
  metadata      Json
  duration      Int?
  difficulty    Difficulty?
  description   String?
  createdAt     DateTime      @default(now())
  logs          ContentLog[]
}

model ContentLog {
  id          String         @id @default(uuid())
  userId      String
  contentId   String
  completedAt DateTime       @default(now())
  content     ContentLibrary @relation(fields: [contentId], references: [id])
  user        User           @relation(fields: [userId], references: [id])

  @@unique([userId, contentId, completedAt])
}

model Channel {
  id       String          @id @default(uuid())
  type     ChannelType
  name     String?
  members  ChannelMember[]
  messages Message[]
}

model ChannelMember {
  id        String       @id @default(uuid())
  userId    String
  channelId String
  status    MemberStatus @default(ACTIVE)
  joinedAt  DateTime     @default(now())
  channel   Channel      @relation(fields: [channelId], references: [id])
  user      User         @relation(fields: [userId], references: [id])

  @@unique([userId, channelId])
}

model Message {
  id           String   @id @default(uuid())
  content      String?
  mediaUrl     String?
  senderId     String
  channelId    String
  isSystem     Boolean  @default(false)
  emotionalTag String?
  priority     String   @default("NORMAL")
  createdAt    DateTime @default(now())
  channel      Channel  @relation(fields: [channelId], references: [id])
  sender       User     @relation(fields: [senderId], references: [id])
}

model Notification {
  id          String           @id @default(uuid())
  userId      String
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title       String
  message     String
  type        NotificationType @default(INFO) 
  isRead      Boolean          @default(false)
  link        String?          // Lien optionnel (ex: "/dashboard/weight")
  
  createdAt   DateTime         @default(now())
}

model Recipe {
  id          String   @id @default(uuid())
  name        String   // Ex: "Poulet Yassa"
  phase       String   // Ex: "DETOX" (car la recette change selon la phase)
  
  ingredients Json     // Liste des ingrédients avec quantités
  instructions Json    // Liste des étapes
  calories    Int?
  protein     Int?
  carbs       Int?
  fat         Int?
  prepTime    Int?     // En minutes
  
  createdAt   DateTime @default(now())

  // On indexe par nom et phase pour retrouver la recette rapidement
  @@unique([name, phase])
}

model WeeklyPlan {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  weekStart DateTime
  phase     String   // Phase au moment de la génération (DETOX, etc.)
  content   Json     // Le menu complet (Days x Meals)
  createdAt DateTime @default(now())

  @@unique([userId, weekStart])
}

model UserAnalysis {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  content   Json     // L'analyse complète (introduction, nutrition, fitness, wellness, conclusion)
  createdAt DateTime @default(now())
}

model Badge {
  id          String      @id @default(uuid())
  code        String      @unique
  name        String
  description String
  icon        String
  earnedBy    UserBadge[]
}

model UserBadge {
  id       String   @id @default(uuid())
  userId   String
  badgeId  String
  earnedAt DateTime @default(now())
  badge    Badge    @relation(fields: [badgeId], references: [id])
  user     User     @relation(fields: [userId], references: [id])

  @@unique([userId, badgeId])
}


enum Role {
  USER
  COACH
  ADMIN
}

enum Gender {
  FEMALE
  MALE
}

enum SubscriptionTier {
  STANDARD_6
  STANDARD_12
  STANDARD_24
  STANDARD_48
  VIP_6
  VIP_12
  VIP_24
  VIP_48
  VIP_PLUS_16
}

enum PhaseType {
  DETOX
  EQUILIBRE
  CONSOLIDATION
  ENTRETIEN
}

enum Mood {
  GREAT
  GOOD
  NEUTRAL
  BAD
  STRESSED
}

enum Digestion {
  GREAT
  NORMAL
  BLOATED
  CONSTIPATED
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
  COACH // Spécial pour les messages du coach
}

enum MemberStatus {
  ACTIVE
  LOCKED
  READ_ONLY
}

enum ChannelType {
  PRIVATE_COACH
  GROUP_DETOX
  GROUP_ECE
}

model WellnessLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      DateTime // La date du log (on stocke à minuit)
  
  // 1. HYDRATATION
  waterIntake Int @default(0) // En nombre de verres (250ml)
  
  // 2. SOMMEIL
  sleepHours   Float? // Nombre d'heures (ex: 7.5)
  sleepQuality String? // "BAD", "AVERAGE", "GOOD", "EXCELLENT"
  
  // 3. HUMEUR / ÉNERGIE
  mood      String? // Emoji ou Enum : "TIRED", "ENERGETIC", "STRESSED", "HAPPY"
  
  // 4. MOUVEMENT
  steps     Int?    // Nombre de pas
  sport     Boolean @default(false) // A fait du sport aujourd'hui ?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Contrainte : Un seul log par jour par user
  @@unique([userId, date])
}

model FitnessVideo {
  id          String   @id @default(uuid())
  title       String
  description String?
  videoUrl    String   // Lien YouTube ou Vimeo ou S3
  thumbnailUrl String? // Image de couverture
  duration    Int      // En minutes (ex: 15, 30)
  
  difficulty  String   // "BEGINNER", "INTERMEDIATE", "ADVANCED"
  category    String   // "CARDIO", "YOGA", "RENFO", "HIIT"
  
  createdAt   DateTime @default(now())
  workoutLogs WorkoutLog[]
}

model WorkoutLog {
  id             String       @id @default(uuid())
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  fitnessVideoId String
  fitnessVideo   FitnessVideo @relation(fields: [fitnessVideoId], references: [id])
  
  date           DateTime     // Date de réalisation
  feedback       String?      // "TOO_HARD", "PERFECT", "TOO_EASY"
  
  createdAt      DateTime     @default(now())

  @@index([userId, date])
}

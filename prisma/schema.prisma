generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                String           @id @default(uuid())
  email             String           @unique
  role              Role             @default(USER)
  firstName         String?
  lastName          String?
  phoneNumber       String?
  gender            Gender           @default(FEMALE)
  birthDate         DateTime?
  heightCm          Float?
  startWeight       Float?
  targetWeight      Float?
  pisi              Float?
  startDate         DateTime         @default(now())
  goalDate          DateTime?
  subscriptionTier  SubscriptionTier @default(STANDARD_6)
  planStartDate     DateTime?        @default(now())
  subEndDate        DateTime?
  isActive          Boolean          @default(true)
  currentStreak     Int              @default(0)
  longestStreak     Int              @default(0)
  lastActivityDate  DateTime?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  isPhaseManual     Boolean          @default(false)
  manualPhaseReason String?
  hasCompletedOnboarding Boolean @default(false)
  
  // Extended Profile for Menu Gen
  allergies        String[]        // e.g. ["Gluten", "Peanuts"]
  dietaryUsage     String?         // e.g. "Vegetarian", "Halal"
  countryOrigin    String?         // e.g. "France", "Senegal"
  
  channels          ChannelMember[]
  contentLogs       ContentLog[]
  dailyLogs         DailyLog[]
  sessions          IkongaSession[]
  messages          Message[]
  notifications     Notification[]
  analysis          UserAnalysis?
  badges            UserBadge[]
  phases            UserPhase[]
  weeklyPlans       WeeklyPlan[]
  wellnessLogs      WellnessLog[]
  workoutLogs       WorkoutLog[]
  customMenus       UserCustomMenu[]
  beautyProfile     BeautyProfile?
  beautyRecipes     BeautyRecipe[]
  
  // Admin Relations
  adminActions      AdminLog[]       @relation("AdminActions")
  targetedActions   AdminLog[]       @relation("TargetUser")
  adminAlerts       AdminAlert[]
  weighIns          WeighIn[]

  @@index([email])
}


model UserPhase {
  id               String    @id @default(uuid())
  userId           String
  type             PhaseType
  startDate        DateTime  @default(now())
  plannedEndDate   DateTime?
  actualEndDate    DateTime?
  isManualOverride Boolean   @default(false)
  adminNote        String?
  isActive         Boolean   @default(true)
  user             User      @relation(fields: [userId], references: [id])

  @@index([userId, isActive])
}

model IkongaSession {
  id                 String   @id @default(uuid())
  userId             String
  sessionNumber      Int
  startDate          DateTime
  endDate            DateTime
  projectedWeightEnd Float
  targetLoss         Float
  realWeightEnd      Float?
  user               User     @relation(fields: [userId], references: [id])

  @@unique([userId, sessionNumber])
}

model DailyLog {
  id               String     @id @default(uuid())
  userId           String
  date             DateTime   @default(now())
  weight           Float?
  photoUrl         String?
  menuId           String?
  caloriesConsumed Int?
  workoutDone      Boolean    @default(false)
  nutritionDone    Boolean    @default(false)
  hydration        Int        @default(0)
  sleepHours       Int?
  mood             Mood?
  digestion        Digestion?
  stressLevel      Int?
  energyLevel      Int?
  wellnessScore    Float?
  notes            String?
  dayStatus        String?
  user             User       @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}

model WellnessAnalysis {
  id          String   @id @default(uuid())
  userId      String
  date        DateTime @default(now())
  trendSlope  Float?
  avgStress   Float?
  actionTaken String?
}

model Menu {
  id          String      @id @default(uuid())
  title       String      @unique
  phaseCompat PhaseType[]
  content     Json
  isPremium   Boolean     @default(false)

  @@index([title])
}

model ContentLibrary {
  id            String       @id @default(uuid())
  category      String
  title         String
  mediaUrl      String?
  targetGender  String[]
  targetPhases  PhaseType[]
  emotionalTags String[]
  metadata      Json
  duration      Int?
  difficulty    Difficulty?
  description   String?
  createdAt     DateTime      @default(now())
  logs          ContentLog[]
}

model ContentLog {
  id          String         @id @default(uuid())
  userId      String
  contentId   String
  completedAt DateTime       @default(now())
  content     ContentLibrary @relation(fields: [contentId], references: [id])
  user        User           @relation(fields: [userId], references: [id])

  @@unique([userId, contentId, completedAt])
}

model Channel {
  id       String          @id @default(uuid())
  type     ChannelType
  name     String?
  members  ChannelMember[]
  messages Message[]
}

model ChannelMember {
  id        String       @id @default(uuid())
  userId    String
  channelId String
  status    MemberStatus @default(ACTIVE)
  joinedAt  DateTime     @default(now())
  channel   Channel      @relation(fields: [channelId], references: [id])
  user      User         @relation(fields: [userId], references: [id])

  @@unique([userId, channelId])
}

model Message {
  id           String   @id @default(uuid())
  content      String?
  mediaUrl     String?
  senderId     String
  channelId    String
  isSystem     Boolean  @default(false)
  emotionalTag String?
  priority     String   @default("NORMAL")
  createdAt    DateTime @default(now())
  channel      Channel  @relation(fields: [channelId], references: [id])
  sender       User     @relation(fields: [senderId], references: [id])
}

model Notification {
  id          String           @id @default(uuid())
  userId      String
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title       String
  message     String
  type        NotificationType @default(INFO) 
  isRead      Boolean          @default(false)
  link        String?          // Lien optionnel (ex: "/dashboard/weight")
  
  createdAt   DateTime         @default(now())
}

model Recipe {
  id          String   @id @default(uuid())
  name        String   // Ex: "Poulet Yassa"
  phase       String   // Ex: "DETOX" (car la recette change selon la phase)
  
  ingredients Json     // Liste des ingrédients avec quantités
  instructions Json    // Liste des étapes
  
  // Metadata for Menu Gen
  allergens   String[]
  dietaryTags String[] // e.g. "Vegetarian", "Halal"
  cuisineType String?  // e.g. "African", "European"
  mealType    String?  // Ex: "BREAKFAST", "LUNCH", "DINNER", "SNACK"
  
  calories    Int?
  protein     Int?
  carbs       Int?
  fat         Int?
  prepTime    Int?     // En minutes
  cookingTime Int?     // En minutes
  difficulty  Difficulty?
  isPremium   Boolean     @default(false)
  
  createdAt   DateTime @default(now())

  // On indexe par nom et phase pour retrouver la recette rapidement
  @@unique([name, phase])
}

model UserCustomMenu {
  id        String   @id @default(uuid())
  userId    String
  date      DateTime // Date du menu customized
  content   Json     // Structure du menu (Breakfast, Lunch, etc.)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
}

model PhaseGuideline {
  id        String        @id @default(uuid())
  phase     PhaseType
  type      GuidelineType
  content   String
  order     Int           @default(0)
  createdAt DateTime      @default(now())

  @@index([phase])
}

model WeeklyPlan {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  weekStart DateTime
  phase     String   // Phase au moment de la génération (DETOX, etc.)
  content   Json     // Le menu complet standard
  overrides Json?    // "Level 2" overrides (Modifs Coach/Admin)
  createdAt DateTime @default(now())

  @@unique([userId, weekStart])
}

model UserAnalysis {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  content   Json     // L'analyse complète (introduction, nutrition, fitness, wellness, conclusion)
  createdAt DateTime @default(now())
}

model Badge {
  id          String      @id @default(uuid())
  code        String      @unique
  name        String
  description String
  icon        String
  earnedBy    UserBadge[]
}

model UserBadge {
  id       String   @id @default(uuid())
  userId   String
  badgeId  String
  earnedAt DateTime @default(now())
  badge    Badge    @relation(fields: [badgeId], references: [id])
  user     User     @relation(fields: [userId], references: [id])

  @@unique([userId, badgeId])
}


enum Role {
  USER
  COACH
  ADMIN
}

enum Gender {
  FEMALE
  MALE
}

enum SubscriptionTier {
  STANDARD_6
  STANDARD_12
  STANDARD_24
  STANDARD_48
  VIP_6
  VIP_12
  VIP_24
  VIP_48
  VIP_PLUS_16
}

enum PhaseType {
  DETOX
  EQUILIBRE
  CONSOLIDATION
  ENTRETIEN
}

enum Mood {
  GREAT
  GOOD
  NEUTRAL
  BAD
  STRESSED
}

enum Digestion {
  GREAT
  NORMAL
  BLOATED
  CONSTIPATED
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
  COACH // Spécial pour les messages du coach
}

enum MemberStatus {
  ACTIVE
  LOCKED
  READ_ONLY
}

enum GuidelineType {
  ALLOWED
  FORBIDDEN
}

enum ChannelType {
  PRIVATE_COACH
  GROUP_DETOX
  GROUP_ECE
}

model WellnessLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      DateTime // La date du log (on stocke à minuit)
  
  // 1. HYDRATATION
  waterIntake Int @default(0) // En nombre de verres (250ml)
  
  // 2. SOMMEIL
  sleepHours   Float? // Nombre d'heures (ex: 7.5)
  sleepQuality String? // "BAD", "AVERAGE", "GOOD", "EXCELLENT"
  sleepStart   DateTime?
  sleepEnd     DateTime?

  // 3. STRESS (Nouveau)
  stressLevel Int?   // 1-10
  stressTags  Json?  // ["Examen", "Travail", "Famille"]

  // 4. ÉNERGIE (Nouveau)
  energyLevel Int?   // 1-10

  // 5. HUMEUR / JOURNAL (Mise à jour)
  mood      String? // Emoji ou Enum principal
  feeling   String? // "Ce que je ressens" (Texte court)
  needs     String? // "Ce dont j'ai besoin" (Texte court)
  
  // 6. MOUVEMENT
  steps     Int?    // Nombre de pas
  sport     Boolean @default(false) // A fait du sport aujourd'hui ?
  
  // 7. INTELLIGENCE IKONGA
  wellnessScore Float? // 0-100
  recoveryScore Float? // 0-100
  dayStatus     WellnessStatus? // FRAGILE, STABLE, POWERFUL
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Contrainte : Un seul log par jour par user
  @@unique([userId, date])
}

enum WellnessStatus {
  FRAGILE
  STABLE
  POWERFUL
}

enum CyclePhase {
  MENSTRUATION
  FOLLICULAR
  OVULATION
  LUTEAL
}

model BeautyProfile {
    id        String    @id @default(cuid())
    userId    String    @unique
    user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
    skinType  SkinType?
    hairType  String?
    concerns  Json? // List of strings
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
}

model BeautyRecipe {
    id           String   @id @default(cuid())
    userId       String
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    title        String
    ingredients  Json // List of strings
    instructions String   @db.Text
    isFavorite   Boolean  @default(false)
    createdAt    DateTime @default(now())

    @@index([userId])
}

enum SkinType {
    OILY
    DRY
    NORMAL
    MIXED
    SENSITIVE
}

// --- ADMIN BACK-OFFICE MODELS ---

model AdminLog {
    id           String   @id @default(cuid())
    adminId      String
    admin        User     @relation("AdminActions", fields: [adminId], references: [id])
    targetUserId String?
    targetUser   User?    @relation("TargetUser", fields: [targetUserId], references: [id])
    actionType   AdminActionType
    details      Json?    // Context about the change (e.g. "Changed phase from Detox to Equilibre")
    timestamp    DateTime @default(now())

    @@index([adminId])
    @@index([targetUserId])
}

model AdminAlert {
    id        String      @id @default(cuid())
    userId    String
    user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
    type      AlertType
    status    AlertStatus @default(PENDING)
    details   Json?       // e.g. "No weigh-in for 7 days"
    createdAt DateTime    @default(now())
    updatedAt DateTime    @updatedAt

    @@index([userId])
    @@index([status])
}

enum AdminActionType {
    SUBSCRIPTION_CHANGE
    PHASE_OVERRIDE
    ALERT_RESOLVE
    MESSAGE_SENT
    USER_NOTE
    CONTENT_UPDATE
    OTHER
}

enum AlertType {
    NO_WEIGH_IN       // 7 days silence
    WEIGHT_GAIN       // 3 consecutive gains
    STAGNATION        // No loss for X days
    SILENCE           // No activity/login
    RISK_BEHAVIOR     // Too much sport, low calories etc.
    OTHER
}

enum AlertStatus {
    PENDING
    ACKNOWLEDGED
    RESOLVED
    IGNORED
}

model Workout {
  id            String         @id @default(uuid())
  title         String
  description   String?
  videoUrl      String
  thumbnailUrl  String?
  duration      Int            // En minutes
  metValue      Float          // Metabolic Equivalent of Task
  
  intensity     WorkoutIntensity
  type          WorkoutType
  
  allowedPhases PhaseType[]
  gender        WorkoutGender  @default(ALL)

  createdAt     DateTime       @default(now())
  workoutLogs   WorkoutLog[]
}

model WorkoutLog {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  workoutId    String
  workout      Workout  @relation(fields: [workoutId], references: [id])
  
  date         DateTime 
  calories     Int?     @default(0)
  feedback     String?  
  
  createdAt    DateTime @default(now())

  @@index([userId, date])
}

enum WorkoutIntensity {
  LOW
  MODERATE
  HIGH
}

enum WorkoutType {
  CARDIO
  HIIT
  STRENGTH
  YOGA
  DANCE
  MIXED
}

enum WorkoutGender {
  MALE
  FEMALE
  ALL
}

model WeighIn {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  date      DateTime @default(now())
  weight    Float
  photoUrl  String?
  source    String   @default("MANUAL")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, date])
}

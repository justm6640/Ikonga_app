datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  COACH
  ADMIN
}

enum Gender {
  FEMALE
  MALE
}

enum SubscriptionTier {
  STANDARD_6
  STANDARD_12
  STANDARD_24
  STANDARD_48
  VIP_12
  VIP_PLUS_16
}

model User {
  id               String           @id @default(uuid())
  email            String           @unique
  role             Role             @default(USER)
  firstName        String?
  lastName         String?
  gender           Gender           @default(FEMALE)
  birthDate        DateTime?
  heightCm         Float?
  startWeight      Float?
  targetWeight     Float?
  pisi             Float?
  startDate        DateTime         @default(now())
  goalDate         DateTime?
  subscriptionTier SubscriptionTier @default(STANDARD_6)
  planStartDate    DateTime?        @default(now())
  isPhaseManual    Boolean          @default(false)
  manualPhaseReason String?
  subEndDate       DateTime?
  isActive         Boolean          @default(true)
  phases           UserPhase[]
  sessions         IkongaSession[]
  dailyLogs        DailyLog[]
  messages         Message[]
  channels         ChannelMember[]
  notifications    Notification[]
  contentLogs      ContentLog[]
  currentStreak    Int              @default(0)
  longestStreak    Int              @default(0)
  lastActivityDate DateTime?
  badges           UserBadge[]
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  analysis         UserAnalysis?

  @@index([email])
}

model UserAnalysis {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  content   Json
  createdAt DateTime @default(now())
}

enum PhaseType {
  DETOX
  EQUILIBRE
  CONSOLIDATION
  ENTRETIEN
}

model UserPhase {
  id               String    @id @default(uuid())
  userId           String
  user             User      @relation(fields: [userId], references: [id])
  type             PhaseType
  startDate        DateTime  @default(now())
  plannedEndDate   DateTime?
  actualEndDate    DateTime?
  isManualOverride Boolean   @default(false)
  adminNote        String?
  isActive         Boolean   @default(true)

  @@index([userId, isActive])
}

model IkongaSession {
  id                 String   @id @default(uuid())
  userId             String
  user               User     @relation(fields: [userId], references: [id])
  sessionNumber      Int
  startDate          DateTime
  endDate            DateTime
  projectedWeightEnd Float
  targetLoss         Float
  realWeightEnd      Float?

  @@unique([userId, sessionNumber])
}

model DailyLog {
  id               String   @id @default(uuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  date             DateTime @default(now())
  weight           Float?
  photoUrl         String?
  menuId           String?
  caloriesConsumed Int?
  workoutDone      Boolean  @default(false)
  hydration        Int      @default(0)
  sleepHours       Int?
  mood             Mood?
  digestion        Digestion?
  stressLevel      Int?     // 1-10
  energyLevel      Int?     // 1-10
  wellnessScore    Float?   // Calculated
  notes            String?
  dayStatus        String?

  @@unique([userId, date])
}

enum Mood {
  GREAT
  GOOD
  NEUTRAL
  BAD
  STRESSED
}

enum Digestion {
  GREAT
  NORMAL
  BLOATED
  CONSTIPATED
}

model WellnessAnalysis {
  id          String   @id @default(uuid())
  userId      String
  date        DateTime @default(now())
  trendSlope  Float?
  avgStress   Float?
  actionTaken String?
}

model Menu {
  id          String      @id @default(uuid())
  title       String      @unique
  phaseCompat PhaseType[]
  content     Json
  isPremium   Boolean     @default(false)

  @@index([title])
}

model ContentLibrary {
  id            String       @id @default(uuid())
  category      String
  title         String
  mediaUrl      String?
  targetGender  String[]
  targetPhases  PhaseType[]
  emotionalTags String[]
  metadata      Json
  duration      Int? // in minutes
  difficulty    Difficulty?
  description   String?
  logs          ContentLog[]
}

model ContentLog {
  id          String         @id @default(uuid())
  userId      String
  user        User           @relation(fields: [userId], references: [id])
  contentId   String
  content     ContentLibrary @relation(fields: [contentId], references: [id])
  completedAt DateTime       @default(now())

  @@unique([userId, contentId, completedAt])
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum ChannelType {
  PRIVATE_COACH
  GROUP_DETOX
  GROUP_ECE
}

enum MemberStatus {
  ACTIVE
  LOCKED
  READ_ONLY
}

model Channel {
  id       String          @id @default(uuid())
  type     ChannelType
  name     String?
  members  ChannelMember[]
  messages Message[]
}

model ChannelMember {
  id        String       @id @default(uuid())
  userId    String
  user      User         @relation(fields: [userId], references: [id])
  channelId String
  channel   Channel      @relation(fields: [channelId], references: [id])
  status    MemberStatus @default(ACTIVE)
  joinedAt  DateTime     @default(now())

  @@unique([userId, channelId])
}

model Message {
  id           String   @id @default(uuid())
  content      String?
  mediaUrl     String?
  senderId     String
  sender       User     @relation(fields: [senderId], references: [id])
  channelId    String
  channel      Channel  @relation(fields: [channelId], references: [id])
  isSystem     Boolean  @default(false)
  emotionalTag String?
  priority     String   @default("NORMAL")
  createdAt    DateTime @default(now())
}

enum NotifCategory {
  PROGRAM
  WEIGHT
  COACH
  SOCIAL
  WELLNESS
}

model Notification {
  id        String        @id @default(uuid())
  userId    String
  user      User          @relation(fields: [userId], references: [id])
  title     String
  body      String
  category  NotifCategory
  isRead    Boolean       @default(false)
  createdAt DateTime      @default(now())
}
model Recipe {
  id           String   @id @default(uuid())
  title        String   @unique
  description  String
  imageUrl     String?
  calories     Int
  protein      Int
  carbs        Int
  fat          Int
  ingredients  String[]
  instructions String[]
  prepTime     Int // in minutes
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Badge {
  id          String      @id @default(uuid())
  code        String      @unique
  name        String
  description String
  icon        String
  earnedBy    UserBadge[]
}

model UserBadge {
  id       String   @id @default(uuid())
  userId   String
  user     User     @relation(fields: [userId], references: [id])
  badgeId  String
  badge    Badge    @relation(fields: [badgeId], references: [id])
  earnedAt DateTime @default(now())

  @@unique([userId, badgeId])
}
